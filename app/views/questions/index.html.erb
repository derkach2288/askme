<div class="container">
  <h2 class="title-lg mb">Питання</h2>

  <% @questions.each do |question|%>
    <p class="mb-sm"><%= link_to "Питання #{question.id}", question_path(question) %></p>
  <% end %>

  <p class="mt">
    <%= link_to "Створити нове питання", new_question_path, class: 'button button-main' %>
  </p>

  <p class="mt">
    <%= render 'form', question: @question %>
  </p>
</div>